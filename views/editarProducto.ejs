<!-- views/editarProducto.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Producto</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" type="text/css" href="/css/estilos.css">
</head>
<body>
 
    <div class="px-4" id="main-content">
        <div class="max-w-2xl mx-auto mt-8">
            <p class="text-gray-600 text-lg font-bold">Editar Productos üçª</p>
            <div class="border-t border-gray-700 my-4"></div>
        </div>

        <div class="max-w-2xl mx-auto mt-8">
            <form class="bg-white p-8 rounded-lg shadow-md" action="/productos/editar/<%= producto.id_producto %>" method="post">
                <div class="mb-4">
                    <label for="name_producto" class="block text-gray-600 text-sm font-medium">Nombre del Producto:</label>
                    <input type="text" id="name_producto" name="name_producto" value="<%= producto.name_producto %>" required class="mt-1 p-2 w-full border rounded-md">
                </div>

                <div class="mb-4">
                    <label for="descr_producto" class="block text-gray-600 text-sm font-medium">Descripci√≥n:</label>
                    <input type="text" id="descr_producto" name="descr_producto" value="<%= producto.descr_producto %>" class="mt-1 p-2 w-full border rounded-md">
                </div>

                <div class="mb-4">
                    <label for="precio_producto" class="block text-gray-600 text-sm font-medium">Precio:</label>
                    <input type="number" id="precio_producto" name="precio_producto" step="0.01" value="<%= producto.precio_producto %>" required class="mt-1 p-2 w-full border rounded-md">
                </div>

                <div class="mb-4">
                    <label for="estado_producto" class="block text-gray-600 text-sm font-medium">Estado:</label>
                    <select id="estado_producto" name="estado_producto" class="mt-1 p-2 w-full border rounded-md">
                        <option value="disponible" <%= producto.estado_producto === 'disponible' ? 'selected' : '' %>>Disponible</option>
                        <option value="no disponible" <%= producto.estado_producto === 'no disponible' ? 'selected' : '' %>>No Disponible</option>
                    </select>
                </div>
                

                <div class="mb-4">
                    <label for="img_producto" class="block text-gray-600 text-sm font-medium">URL del Producto:</label>
                    <input type="text" id="img_producto" name="img_producto" value="<%= producto.img_producto %>" class="mt-1 p-2 w-full border rounded-md">
                </div>

                <button type="submit" class="bg-purple-500 text-white px-4 py-2 rounded-md hover:bg-purple-600">Guardar Cambios</button>

                <a  href="/productos" class="bg-purple-500 text-white px-4 py-2 rounded-md hover:bg-purple-600">Volver</a>

            </form>

           
        </div>
    </div>


    <%- include('partials/footer') %>
</body>
</html>
