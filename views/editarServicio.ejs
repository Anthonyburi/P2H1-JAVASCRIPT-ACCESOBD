<!-- views/editarProducto.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Editar Servicio</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
 
    <div class="px-4" id="main-content">
        <div class="max-w-2xl mx-auto mt-8">
            <p class="text-gray-600 text-lg font-bold">Editar Servicio üçª</p>
            <div class="border-t border-gray-700 my-4"></div>
        </div>

        <div class="max-w-2xl mx-auto mt-8">
            <form class="bg-white p-8 rounded-lg shadow-md" action="/servicios/editar/<%= servicio.id %>" method="post">
                <div class="mb-4">
                    <label for="name_servicio" class="block text-gray-600 text-sm font-medium">Nombre del Servicio:</label>
                    <input type="text" id="name_servicio" name="name_servicio" value="<%= servicio.name_servicio %>" required class="mt-1 p-2 w-full border rounded-md">
                </div>

                <div class="mb-4">
                    <label for="descr_servicio" class="block text-gray-600 text-sm font-medium">Descripci√≥n:</label>
                    <input type="text" id="descr_servicio" name="descr_servicio" value="<%= servicio.descr_servicio %>" class="mt-1 p-2 w-full border rounded-md">
                </div>

                <div class="mb-4">
                    <label for="img_servicio" class="block text-gray-600 text-sm font-medium">URL del Servicio:</label>
                    <input type="text" id="img_servicio" name="img_servicio" value="<%= servicio.img_servicio %>" class="mt-1 p-2 w-full border rounded-md">
                </div>

                <button type="submit" class="bg-purple-500 text-white px-4 py-2 rounded-md hover:bg-purple-600">Guardar Cambios</button>

                <a  href="/servicios" class="bg-purple-500 text-white px-4 py-2 rounded-md hover:bg-purple-600">Volver</a>

            </form>

           
        </div>
    </div>


    <%- include('partials/footer') %>
</body>
</html>
