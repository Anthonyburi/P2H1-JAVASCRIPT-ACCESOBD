<!-- views/acerca.ejs -->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Acerca de Tronquitos Bar</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="max-w-2xl mx-auto mt-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">
        Servicios de Tronquitos Bar üçª
      </h2>
      <a class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-purple-600" href="/servicios/add">Agregar Servicio</a>
     
      <div class="flex flex-col space-y-4"> <!-- Contenedor vertical para las tarjetas -->
        <% servicios.forEach((servicio) => { %>
          <div class="flex bg-white p-6 rounded-lg shadow-lg items-center"> <!-- Tarjeta horizontal -->
            <img
              src="<%= servicio.img_servicio %>"
              class="w-1/3 rounded-lg object-cover h-40" 
              alt="<%= servicio.name_servicio %>"
            />
            <div class="w-2/3 ml-4"> <!-- Contenido textual -->
              <h3 class="text-xl font-semibold mb-2"><%= servicio.name_servicio %></h3>
              <p class="text-gray-600 mb-4"><%= servicio.descr_servicio %></p>
              <div class="flex space-x-4"> <!-- Botones para editar y eliminar -->
                <a href="/servicios/editar/<%= servicio.id%>"
                  class="bg-blue-500 text-white px-4 py-2 rounded-lg">Editar</a>
                <form action="/servicios/eliminar/<%= servicio.id %>"
                  method="post" class="inline-block">
                  <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg">Eliminar</button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
